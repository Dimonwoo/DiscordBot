{
    "env": {
        "es2021": true,
        "node": true,
	"mocha": true
    },
    "extends": ["plugin:promise/recommended", "eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
	"no-unused-vars": "off",
    	"no-useless-catch": "off",
	"no-fallthrough": "off"
    },
    "plugins": ["promise"]
}
